	<div id="outerWrapper">
		<div class="topSection">
			{{#if isNotStart}}
			<div id="header" class="orangeGradient {{#if isNotStart}}micro{{/if}}">
				<h1><a href="{{link 'page' ''}}">deepstream.io - a scalable server for realtime web apps</a></h1>
				{{!-- <a class="download" href="{{link 'page' 'download'}}">download</a> --}}
			</div>  
			{{/if}}
			<div id="nav" {{#if isNotStart}}class="standalone"{{/if}}>
				{{#if isNotStart}}
				<img src="{{link 'asset' 'images/background-abstract.jpg'}}" />
				{{/if}}
				<ul>
					<li {{#if pageIs_start}}class="active"{{/if}}><a href="{{link 'page' ''}}">START</a></li>
					<li {{#if pageIs_download}}class="active"{{/if}}><a href="{{link 'page' 'download'}}">DOWNLOAD</a></li>
					<li {{#if pageIs_tutorials}}class="active"{{/if}}><a href="{{link 'page' 'tutorials'}}">TUTORIALS</a></li>
					<li {{#if pageIs_docs}}class="active"{{/if}}><a href="{{link 'page' 'docs'}}">DOCS</a></li>
				</ul>
			</div>
		</div>
		{{#if hasNav}}
		<div id="wrapper" class="main">
			{{nav}}
			<div id="content">
				{{pageContent}}
				
				<h3>Comments and Questions</h3>
				<div id="disqusContainer">
					<div id="disqus_thread"></div>
					<script type="text/javascript">
					    /* * * CONFIGURATION VARIABLES * * */
					    var disqus_shortname = 'deepstreamio';
					    
					    /* * * DON'T EDIT BELOW THIS LINE * * */
					    (function() {
					        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
					        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
					        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					    })();
					</script>
					<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="{{link 'asset' 'js/docs.js'}}"></script>
		{{else}}
		<div class="content main">
			{{pageContent}}
		</div>
		{{/if}}
		<div id="footerPush"></div>
	</div>
	<div id="footer">
		<div class="copyright">&copy;2014 Hoxton One Ltd. All rights reserved.</div>
