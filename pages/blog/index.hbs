<link rel="stylesheet" type="text/css" href="../assets/css/blog.css" />

<div id="wrapper">

	<div class="blog-header">
		<h1>The deepstream blog</h1>
	</div>

	<div class="blog-posts">

		{{#each blogPosts}}
		<article class="post">

			<header class="post-header">
				<h2 class="post-title">
					<a href="{{blogPath}}">
						{{title}}
					</a>
				</h2>
			</header>

			<div class="post-thumbnail">
				<img src="{{thumbnail}}">
			</div>

			<div class="post-excerpt">
				<p> {{description}} <span style="color:#ccc;">…</span>
				<a class="read-more" href="{{blogPath}}"> <span>»</span></a></p>
			</div>
			<footer class="post-meta">>
				By {{author.name}}
				<time class="post-date" datetime="{{date}}">{{date}}</time>
			</footer>

		</article>
		{{/each}}

	</div>

</div>